<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.quiz.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="346dp"
        android:layout_height="225dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAnswerOne"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="245dp"
        android:background="@color/colorPrimaryDark"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAnswerTwo"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="245dp"
        android:background="@color/colorPrimaryDark"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAnswerThree"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:background="@color/colorPrimaryDark"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnswerOne" />

    <Button
        android:id="@+id/buttonAnswerFour"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnswerTwo" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="337dp"
        android:layout_height="25dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnswerFour"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
